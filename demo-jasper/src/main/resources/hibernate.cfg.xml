<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/demo_jasper</property>
        <property name="hibernate.connection.username">postgres</property>
        <mapping resource="co/edu/usbcali/demojasper/modelo/DetalleFactura.hbm.xml" />
        <mapping resource="co/edu/usbcali/demojasper/modelo/Cliente.hbm.xml" />
        <mapping resource="co/edu/usbcali/demojasper/modelo/Producto.hbm.xml" />
        <mapping resource="co/edu/usbcali/demojasper/modelo/Factura.hbm.xml" />
        <mapping resource="co/edu/usbcali/demojasper/modelo/Consultas.hbm.xml" />
    </session-factory>
</hibernate-configuration>
